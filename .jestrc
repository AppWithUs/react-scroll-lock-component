{
    "resetMocks": true,
    "roots": [
        "<rootDir>/test",
        "<rootDir>/src"
    ],
    "testRegex" : ".*test.jsx",
    "testPathIgnorePatterns": [
        "__snapshots__",
        "<rootDir>/node_modules/"
    ],

    "coverageDirectory": "./coverage",
    "coverageThreshold": {
        "global": {
            "lines": 100
        }
    },
    "coverageReporters": [
        "lcov",
        "text"
    ]
}
